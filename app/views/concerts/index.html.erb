<p id="notice"><%= notice %></p>

<h1>Concerts</h1>

<table>
  <thead>
    <tr>
      <th>Grupo</th>
      <th>Asistentes</th>
      <th>Creado</th>
      <th>Fecha del Concierto</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.group.name %></td>
        <td><%= concert.asistentes %></td>
        <td><%= concert.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= concert.date_concert %></td>
        <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
        <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Concert', new_concert_path %>
